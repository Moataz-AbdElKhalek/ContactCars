= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Name
    = f.text_field :Name
  .field
    = f.label :Password
    = f.password_field :Password
  .field
    = f.label :Phone
    = f.text_field :Phone
  .field
    = f.label :Address
    = f.text_field :Address
  .actions
    = f.submit 'Save'
