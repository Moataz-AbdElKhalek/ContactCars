= form_for @car do |f|
  -if @car.errors.any?
    #error_explanation
      %h2= "#{pluralize(@car.errors.count, "error")} prohibited this car from being saved:"
      %ul
        - @car.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Status
    = f.select :status, ['old', 'new']
  .field
    = f.label :Brand
    = f.select :Brand, ['Merceds','BMW','Fiat','Ferrary','Toyota']
  .field
    = f.label :Model
    = f.text_field :Model
  .field
    = f.label :Year
    = f.date_select :Year
  .field
    = f.label :Engine
    = f.text_field :Engine
  .field
    = f.label :Price
    = f.number_field :Price
  .field
    = f.label :Notes
    = f.text_area :Notes
  .field
    = f.label :Image
    = f.text_field :Image
  .field
    = f.label :Owner
    = f.text_field :Owner
  .actions
    = f.submit 'Save'
